@model CLDV_POE_PART_TWO.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Home Page";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="text-center">
    @if (isAdmin)
    {
        <h1 class="display-4 mb-4">Admin Dashboard</h1>

        <section class="admin-overview mb-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Total Products</h5>
                            <p class="card-text display-4">@Model.TotalProducts</p> 
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Total Orders</h5>
                            <p class="card-text display-4">@Model.TotalOrders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Total Users</h5>
                            <p class="card-text display-4">@Model.TotalUsers</p> 
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="admin-recent-activity mb-4">
            <h2 class="mb-3">Recent Activities</h2>
            <ul class="list-group">
                @foreach (var activity in Model.RecentActivities)
                {
                    <li class="list-group-item">@activity</li>
                }
            </ul>
        </section>

     

        <section class="admin-quick-actions">
            <h2 class="mb-3">Quick Actions</h2>
            <div class="d-flex justify-content-center">
                <a asp-controller="Products" asp-action="Create" class="btn btn-primary me-2">Add New Product</a>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary me-2">Manage Orders</a>
                
            </div>
        </section>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4 mb-4">Welcome to Khumalo Craft</h1>
            <p class="lead mb-4">
                KhumaloCraft Emporium celebrates gifted artisans and their craftsmanship from all around the globe. Our platform provides a marketplace, allowing
                artisans from everywhere to share their products, their skills, and their stories.
            </p>

            <h2 class="mb-3">Explore Handcrafted Treasures</h2>
            <p class="mb-4">
                You will find we have an incredibly diverse collection of handcrafted works from artisans, who worked painstakingly hard to produce fine, meticulously crafted works.
                Our collection has elegant and intricate jewelry, captivating sculptures, and much more.
            </p>
            <h2 class="mb-3">Shop with Purpose</h2>
            <p class="mb-4">
                Each purchase made by you gives support to these hardworking artisans from all over the globe. Help lift up these artisans and protect their livelihoods, tradition,
                and culture.
            </p>

            <h2 class="mb-3">Start Your Journey Today</h2>
            <p class="mb-4">
                Start your journey today, and dive into the world of arts and craftsmanship with KhumaloCraft Emporium.
            </p>
        </div>
    }
</div>
    
    

 